@import './vars.styl'
$header-height = 60px
.home-header
  width 100%
  height $header-height
  background-color #292d38
.home-header-box
  width $limit-width
  margin auto
  .home-logo
    width 270px
    height $header-height
    display table
    float left
  .logo-box
    display table-cell
    text-align left
    color #Fff
    font-size 20px
    text-decoration none
    font-weight bold
    vertical-align middle
    & img
      vertical-align middle
  .home-logo-span
    margin-left 10px
  .home-nav
    float left
    height $header-height
    line-height $header-height
  .home-nav-li
    padding 0 15px
    float left
    a
      color #fff
      font-size 18px
      &.active
        color $theme-color
  .home-user
    float right
    height $header-height
    line-height $header-height
    .weilie
      vertical-align middle
    .userinfo-inner
      cursor pointer
      color #fff
      img
        width 38px
        height 38px
        border-radius 50%
        vertical-align middle
  @import './vars.styl';
  html,
  body {
  	font-size: 14px;
  	line-height: 1.5em;
      color: #333;
  }

  * {
  	box-sizing: border-box;
  }

  ul,
  li,
  p,
  input {
  	padding: 0;
  	margin: 0;
  }

  input {
  	outline: none;
  }

  button {
  	border: none;
  	text-align: center;
  	cursor: pointer;
  }

  ul,
  li {
  	list-style: none;
  }

  a {
  	text-decoration: none;
  }

  body {
  	min-width: $limit-width;
  	background-color: #F6F6F6;
  }

  .content-box {
  	width: $limit-width;
  	margin: auto;
  }

  .f-l {
  	float: left;
  }

  .f-r {
  	float: right;
  }

  .required-element:before {
  	content: "*";
  	color: #f33a59;
  	padding-right: 5px;
  }

  .is-danger {
  	position: absolute;
  	width: auto;
  	text-align: left;
  	color: #FFF;
  	background: #EB767E;
  	font-size: 12px;
  	padding: 4px 15px;
  	border-radius: 4px;
  	left: 0;
  	bottom: -24px;
  	z-index: 10;
  	&:before {
  		content: ' ';
  		position: absolute;
  		left: 20px;
  		top: -6px;
  		width: 0;
  		height: 0;
  		border-left: 6px solid transparent;
  		border-right: 6px solid transparent;
  		border-bottom: 8px solid #EB767E;
  	}
  }
.ellipsis{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}